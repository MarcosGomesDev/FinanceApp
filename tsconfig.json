{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@types/*": ["src/types/*"],
      "@styles": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
      "@routes/*": ["src/routes/*"],
      "@config/*": ["src/config/*"],
      "@contexts": ["src/contexts/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@components/*": ["src/components/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@themes/*": ["src/themes/*"],
      "@schemas/*": ["src/schemas/*"]
    }
  }
}
